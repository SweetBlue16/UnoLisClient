<Window x:Class="UnoLisClient.UI.PopUpWindows.LoadingPopUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnoLisClient.UI.PopUpWindows"
        xmlns:language="clr-namespace:UnoLisClient.UI.Properties.Langs"
        xmlns:controls="clr-namespace:UnoLisClient.UI.CustomUserControls"
        Title="LoadingPopUpWindow" Height="200" Width="450"
        Background="#1B263B" WindowStartupLocation="CenterScreen"
        Loaded="LoadingPopUpWindowLoaded">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="{x:Static language:Global.LoadingLabel}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,16"
                   VerticalAlignment="Top"
                   FontFamily="pack://application:,,,/Fonts/#Luckiest Guy"
                   Foreground="White"
                   FontSize="40"/>
            <controls:LoadingProgressBar x:Name="LoadingProgressBar"
                                         HorizontalAlignment="Center"
                                         Width="300"
                                         Height="30"
                                         Visibility="Visible"/>
        </StackPanel>
    </Grid>
</Window>
