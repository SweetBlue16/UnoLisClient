<UserControl x:Class="UnoLisClient.UI.Views.Controls.SettingsModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Langs="clr-namespace:UnoLisClient.UI.Properties.Langs"
             mc:Ignorable="d" Background="Transparent"
             d:DesignHeight="320" d:DesignWidth="350">

    <Border Background="#E61E1E1E"
            CornerRadius="10"
            Width="350"
            Height="320"
            Padding="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,16">
                <Image Source="pack://application:,,,/Assets/Other/Settings.png"
                       Width="45"
                       Height="45"
                       Margin="0,0,10,0"/>
                <TextBlock Text="{x:Static Langs:Global.SettingsLabel}"
                       FontSize="25"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                       FontFamily="pack://application:,,,/Fonts/#Luckiest Guy"
                       Margin="0,0,0,0"/>
            </StackPanel>
            <TextBlock Text="{x:Static Langs:Global.VolumeLabel}"
                       FontSize="16"
                       Foreground="White"
                       FontFamily="pack://application:,,,/Fonts/#Lato"/>
            <Slider Minimum="0"
                    Maximum="100"
                    Value="50"
                    Width="200"
                    Margin="0,10,0,20"/>
            <Button x:Name="LeaveMatchButton"
                    Content="{x:Static Langs:Lobby.LeaveMatchButton}"
                    Width="200"
                    Height="40"
                    Margin="0,10,0,0"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Click="LeaveMatchButton_Click"/>
            <Button x:Name="ReportPlayerButton"
                    Content="{x:Static Langs:Match.ReportPlayerLabel}"
                    Width="200"
                    Height="40"
                    Margin="0,10,0,0"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Command="{Binding DataContext.OpenReportWindowCommand,
                             RelativeSource={RelativeSource AncestorType={x:Type Page}}}"/>
            <Button x:Name="CloseButton"
                    Content="{x:Static Langs:Global.CloseButton}"
                    Width="200"
                    Height="40"
                    Margin="0,10,0,0"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Border>
</UserControl>