<UserControl x:Class="UnoLisClient.UI.Views.Controls.SettingsModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Langs="clr-namespace:UnoLisClient.UI.Properties.Langs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#96000000">

    <Border Background="#E61E1E1E"
            CornerRadius="10"
            Width="350"
            Height="280"
            Padding="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="{x:Static Langs:Global.SettingsLabel}"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock Text="{x:Static Langs:Global.VolumeLabel}"
                       FontSize="16"
                       Foreground="White"/>

            <Slider Minimum="0"
                    Maximum="100"
                    Value="50"
                    Width="200"
                    Margin="0,10,0,20"/>

            <Button x:Name="LeaveMatchButton"
                    Content="{x:Static Langs:Lobby.LeaveMatchButton}"
                    Width="150"
                    Height="40"
                    Margin="0,10,0,0"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Click="LeaveMatchButton_Click"/>

            <Button x:Name="CloseButton"
                    Content="{x:Static Langs:Global.CloseButton}"
                    Width="150"
                    Height="40"
                    Margin="0,10,0,0"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="CloseButton_Click"/>

        </StackPanel>
    </Border>
</UserControl>