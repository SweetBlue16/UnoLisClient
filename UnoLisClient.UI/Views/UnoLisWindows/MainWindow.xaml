<Window x:Class="UnoLisClient.UI.Views.UnoLisWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnoLisClient.UI.Views.UnoLisWindows"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:UnoLisClient.UI.Properties.Langs"
        Title="{x:Static language:Global.AppNameLabel}"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Loaded="MainWindow_Loaded"
        Closing="MainWindowClosing">

    <Grid>
        <MediaElement x:Name="VideoBackground"
                      Source="Assets/marioDesktop.mp4"
                      LoadedBehavior="Play"
                      UnloadedBehavior="Manual"
                      Stretch="Fill"
                      IsHitTestVisible="False"
                      MediaEnded="VideoBackground_MediaEnded"/>
        <MediaElement x:Name="MusicPlayer"
                      Source="Assets/jazzBackground.mp3"
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Manual"
                      Volume="0.5"
                      MediaEnded="MusicPlayer_MediaEnded"
                      Visibility="Hidden"/>
        <Frame x:Name="MainFrame"
               NavigationUIVisibility="Hidden"
               Background="Transparent"/>
        <Rectangle x:Name="IntroMask"
               Fill="Black"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Panel.ZIndex="10"
               Opacity="1"/>
        <Image x:Name="SplashLogo"
               Source="/Assets/unoLogoPixelArt.png"
               Width="300"
               Height="270"
               Opacity="0"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               RenderTransformOrigin="0.5,0.5"
               Panel.ZIndex="11">
            <Image.RenderTransform>
                <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
