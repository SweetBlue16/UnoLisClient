<Window x:Class="UnoLisClient.UI.Views.UnoLisWindows.ReportPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnoLisClient.UI.Views.UnoLisWindows"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:UnoLisClient.UI.Properties.Langs"
        Height="350" Width="450" WindowStartupLocation="CenterScreen"
        Background="Transparent" WindowStyle="None" 
        AllowsTransparency="True" ResizeMode="NoResize">

    <Border Background="#1B263B" BorderBrush="#FF4500" BorderThickness="2" CornerRadius="15">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Image Source="pack://application:,,,/Assets/Other/ReportPlayer.png" Width="40" Height="40" Margin="0,0,10,0"/>
                <TextBlock Text="{x:Static language:Match.ReportPlayerLabel}" 
                           FontSize="30" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"
                           FontFamily="pack://application:,,,/Fonts/#Luckiest Guy"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Text="{x:Static language:Match.SelectReportPlayer}"
                           Foreground="LightGray"
                           Margin="0,0,0,5"
                           FontFamily="pack://application:,,,/Fonts/#Lato"/>
                <ComboBox ItemsSource="{Binding AvailablePlayers}" 
                          SelectedItem="{Binding SelectedPlayer}"
                          Height="35" FontSize="16" Padding="5"
                          Style="{DynamicResource ComboBoxStyle}"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <TextBlock Text="{x:Static language:Match.DescriptionReportLabel}"
                           Foreground="LightGray"
                           Margin="0,0,0,5"
                           FontFamily="pack://application:,,,/Fonts/#Lato"/>
                <TextBox Text="{Binding ReportDescription, UpdateSourceTrigger=PropertyChanged}"
                         Height="100" TextWrapping="Wrap" AcceptsReturn="True"
                         FontSize="14" Padding="5"
                         Width="400"
                         Style="{DynamicResource TextBoxStyle}"
                         VerticalScrollBarVisibility="Auto"
                         MaxLength="255"
                         VerticalContentAlignment="Top"
                         Tag="{x:Static language:Match.DescriptionReportLabel}"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="{x:Static language:Global.CancelButton}" 
                        Command="{Binding CancelCommand}"
                        Style="{DynamicResource SecondaryButtonStyle}"
                        Width="120" Margin="0,0,10,0"/>
                <Button Content="{x:Static language:Global.SendButton}" 
                        Command="{Binding SendReportCommand}"
                        Style="{DynamicResource PrimaryButtonStyle}"
                        Width="120"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
