<Page x:Class="UnoLisClient.UI.Views.UnoLisPages.FriendsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:UnoLisClient.UI.Views.Controls"
      mc:Ignorable="d"
      Background="Transparent">

    <Grid>
        <!-- Fondo general -->
        <Border Background="#AA1C1C1C"
                CornerRadius="12"
                Padding="30"
                Margin="60"
                BorderBrush="#FF444444"
                BorderThickness="2">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Encabezado -->
                    <RowDefinition Height="*"/>
                    <!-- Lista de amigos -->
                    <RowDefinition Height="Auto"/>
                    <!-- Buzón -->
                </Grid.RowDefinitions>

                <!-- 🔹 Encabezado -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Botón de regresar -->
                    <Button Grid.Column="0"
                            Width="40"
                            Height="40"
                            Content="⮌"
                            FontSize="18"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            VerticalAlignment="Top"
                            Click="BackButton_Click"/>

                    <!-- Título -->
                    <TextBlock Grid.Column="1"
                               Text="My Friends"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Left"
                               Margin="20,0,0,0"/>

                    <!-- Botón de agregar amigo -->
                    <Button Grid.Column="2"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Width="40"
                            Height="40"
                            Content="+"
                            FontSize="22"
                            FontWeight="Bold"
                            VerticalAlignment="Top"
                            Click="AddFriend_Click"/>
                </Grid>

                <!-- 🔹 Lista de amigos -->
                <DataGrid x:Name="FriendsTable"
                          Grid.Row="1"
                          Style="{StaticResource DataGridStyle}"
                          AutoGenerateColumns="False"
                          Margin="0,10,0,10">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nickname"
                                            Binding="{Binding Nickname}"
                                            Width="*"/>

                        <DataGridTemplateColumn Header="Action" Width="130">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Remove"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Padding="6,2"
                                            Click="RemoveFriend_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- 🔹 Buzón de solicitudes -->
                <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="View Friend Requests"
                            Style="{StaticResource PrimaryButtonStyle}"
                            FontSize="16"
                            Padding="10,5"
                            Click="OpenFriendRequests_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 🟣 Overlay del modal de agregar amigo -->
        <Grid x:Name="AddFriendOverlay"
              Background="#99000000"
              Visibility="Collapsed"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Panel.ZIndex="99">

            <local:AddFriendModal x:Name="AddFriendModal"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  FriendAdded="AddFriendModal_FriendAdded"
                                  Canceled="AddFriendModal_Canceled"/>
        </Grid>
    </Grid>
</Page>
