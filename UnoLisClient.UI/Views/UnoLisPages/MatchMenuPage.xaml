<Page x:Class="UnoLisClient.UI.Views.UnoLisPages.MatchMenuPage" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:Langs="clr-namespace:UnoLisClient.UI.Properties.Langs"
      mc:Ignorable="d"
      Title="MatchMenuPage"
      Background="Transparent">

    <!--  Animación de entrada -->
    <Page.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1"
                                     Duration="0:0:1">
                        <DoubleAnimation.EasingFunction>
                            <QuadraticEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>

    <Grid>
        <!-- Contenedor principal -->
        <Border Background="#AA000000"
                CornerRadius="15"
                Padding="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="500"
                Height="400">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Encabezado con icono de regresar -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Ícono de regresar -->
                    <TextBlock Grid.Column="0"
                               Text="⮌"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"
                               Cursor="Hand"
                               VerticalAlignment="Top"
                               MouseDown="BackIcon_MouseDown"
                               Margin="0,0,0,10"/>

                    <!-- Título -->
                    <TextBlock Grid.Column="1"
                               Text="{x:Static Langs:Global.MatchMenuLabel}"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="White"
                               FontFamily="pack://application:,,,/Fonts/#Luckiest Guy"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>
                </Grid>

                <!-- Contenido principal -->
                <StackPanel Grid.Row="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">

                    <!-- Botón Crear Partida -->
                    <Button x:Name="CreateMatchButton"
                            Content="{x:Static Langs:Global.CreateMatchButton}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            FontSize="16"
                            Width="300"
                            Height="80"
                            Cursor="Hand"
                            Click="ClickCreateMatchButton"
                            Margin="0,0,0,30"/>

                    <!-- Botón Unirse -->
                    <Button x:Name="JoinMatchButton"
                            Content="{x:Static Langs:Global.JoinMenuButton}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            FontSize="16"
                            Width="300"
                            Height="80"
                            Cursor="Hand"
                            Click="ClickJoinMatchButton"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
