<Page x:Class="UnoLisClient.UI.Views.UnoLisPages.MatchMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="MatchMenuPage">

    <Page.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                 From="0" To="1"
                                 Duration="0:0:1">
                        <DoubleAnimation.EasingFunction>
                            <QuadraticEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>

    <Grid>
        <!-- Fondo translúcido -->
        <Border Background="#AA000000"
                CornerRadius="15"
                Padding="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="500" Height="400">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,0">

                <!-- 🔹 Título -->
                <TextBlock Text="MULTIPLAYER"
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           FontFamily="pack://application:,,,/Fonts/#Luckiest Guy"
                           Margin="0,0,0,40"/>

                <!-- 🟢 Botón Crear Partida -->
                <Button x:Name="CreateMatchButton"
                        Content="CREATE MATCH"
                        Style="{StaticResource PrimaryButtonStyle}"
                        FontSize="16"
                        Width="300"
                        Height="80"
                        Cursor="Hand"
                        Click="ClickCreateMatchButton"
                        Margin="0,0,0,30"/>

                <!-- 🔵 Botón Unirse -->
                <Button x:Name="JoinMatchButton"
                        Content="JOIN MATCH"
                        Style="{StaticResource SecondaryButtonStyle}"
                        FontSize="16"
                        Width="300"
                        Height="80"
                        Cursor="Hand"
                        Click="ClickJoinMatchButton"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
