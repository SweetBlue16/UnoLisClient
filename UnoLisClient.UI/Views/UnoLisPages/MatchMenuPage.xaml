<Page x:Class="UnoLisClient.UI.Views.UnoLisPages.MatchMenuPage" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:Langs="clr-namespace:UnoLisClient.UI.Properties.Langs"
      xmlns:viewModels="clr-namespace:UnoLisClient.UI.ViewModels"
      mc:Ignorable="d"
      Title="MatchMenuPage"
      Background="Transparent">

    <Page.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1"
                                     Duration="0:0:1">
                        <DoubleAnimation.EasingFunction>
                            <QuadraticEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>

    <Grid>
        <Border Background="#AA000000"
                CornerRadius="15"
                Padding="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="500"
                Height="400">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="⮌"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"
                               Cursor="Hand"
                               VerticalAlignment="Top"
                               Margin="0,0,0,10">
                        <TextBlock.InputBindings>
                            <MouseBinding Gesture="LeftClick"
                                          Command="{Binding GoBackCommand}"/>
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Left"
                                Margin="20,0,20,0">
                        <Image Source="pack://application:,,,/Assets/Other/MatchInvitation.png"
                               Width="60"
                               Height="60"
                               Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="1"
                               Text="{x:Static Langs:Global.MatchMenuLabel}"
                               FontSize="34"
                               FontWeight="Bold"
                               TextWrapping="Wrap"
                               Foreground="White"
                               FontFamily="pack://application:,,,/Fonts/#Luckiest Guy"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,0,0,0"/>
                    </StackPanel>
                </Grid>

                <StackPanel Grid.Row="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">

                    <Button x:Name="CreateMatchButton"
                            Content="{x:Static Langs:Global.CreateMatchButton}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            FontSize="16"
                            Width="300"
                            Height="80"
                            Cursor="Hand"
                            Command="{Binding CreateMatchCommand}"
                            Margin="0,0,0,30"/>

                    <Button x:Name="JoinMatchButton"
                            Content="{x:Static Langs:Global.JoinMenuButton}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            FontSize="16"
                            Width="300"
                            Height="80"
                            Cursor="Hand"
                            Command="{Binding JoinMatchCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
