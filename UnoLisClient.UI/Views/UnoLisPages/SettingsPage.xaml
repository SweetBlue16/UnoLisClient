<Page x:Class="UnoLisClient.UI.Views.UnoLisPages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:language="clr-namespace:UnoLisClient.UI.Properties.Langs"
      mc:Ignorable="d"
      Title="SettingsPage">

    <Grid>
        <Border Grid.Row="0" Grid.Column="0"
                Background="#AA000000"
                CornerRadius="15"
                Padding="24"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MinWidth="300" MinHeight="200"
                MaxWidth="600" MaxHeight="400"
                Margin="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="4" Color="Black" Opacity="0.5"/>
            </Border.Effect>

            <Grid>
                <!-- 🧱 Definición de filas -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header con título + botón -->
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Language -->
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Volume -->
                </Grid.RowDefinitions>

                <!-- 🔝 Header: Título + botón de cerrar -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label x:Name="SettingsTitleLabel"
                           Content="{x:Static language:Global.SettingsLabel}"
                           FontSize="28" FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                    <!-- Botón de cerrar -->
                    <Button x:Name="CloseButton"
                            Grid.Column="1"
                            Content="✖"
                            FontWeight="Bold"
                            FontSize="18"
                            Width="32" Height="32"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Cursor="Hand"
                            Click="ClickCloseButton">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="2">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#22FFFFFF"/>
                                                    <Setter Property="Foreground" Value="#FFD60A"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#44FFFFFF"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Idioma -->
                <Grid Grid.Row="2" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <Label x:Name="LanguageLabel"
                           Content="{x:Static language:Settings.LanguageLabel}"
                           Foreground="White"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>

                    <ComboBox x:Name="LanguageComboBox"
                              Style="{StaticResource ComboBoxStyle}"
                              Width="150" Height="35"
                              FontSize="14"
                              HorizontalAlignment="Right"
                              SelectionChanged="SelectionChangedLanguageComboBox"
                              Grid.Column="1">
                        <ComboBoxItem Content="{x:Static language:Settings.EnglishComboItem}" Tag="en-US"/>
                        <ComboBoxItem Content="{x:Static language:Settings.SpanishComboItem}" Tag="es-MX"/>
                    </ComboBox>
                </Grid>

                <!-- Volumen -->
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <Label x:Name="VolumeLabel"
                           Content="{x:Static language:Global.VolumeLabel}"
                           Foreground="White"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>

                    <Slider x:Name="VolumeSlider"
                            Minimum="0" Maximum="100" Value="50"
                            TickFrequency="5" IsSnapToTickEnabled="True"
                            Width="150" Height="24"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Grid.Column="1"
                            ValueChanged="ValueChangedVolumeSlider"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
