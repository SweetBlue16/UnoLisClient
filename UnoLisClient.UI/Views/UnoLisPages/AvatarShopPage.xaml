<Page x:Class="UnoLisClient.UI.Views.UnoLisPages.AvatarShopPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:language="clr-namespace:UnoLisClient.UI.Properties.Langs"
      mc:Ignorable="d"
      Title="AvatarShopPage">

    <Grid>
        <Border Background="#AA000000"
                CornerRadius="15"
                Padding="24"
                Margin="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MinWidth="600"
                MaxWidth="1000"
                MaxHeight="600">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="4" Color="Black" Opacity="0.5"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="BackButton"
                            Grid.Column="0"
                            Content="⮌"
                            FontSize="20"
                            FontWeight="Bold"
                            Width="40"
                            Height="40"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Click="ClickBackButton">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="2">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#22FFFFFF"/>
                                                    <Setter Property="Foreground" Value="#FFD60A"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#44FFFFFF"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBlock Grid.Column="1"
                               Text="{x:Static language:Shop.AvatarShopLabel}"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="White"
                               FontFamily="pack://application:,,,/Fonts/#Luckiest Guy"
                               HorizontalAlignment="Left"
                               Margin="40,0,0,0"
                               VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="pack://application:,,,/Assets/Other/RevoCoins.png"
                               Width="35" Height="35" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <TextBlock Text="{Binding CurrentRevoCoins}" 
                                       FontFamily="pack://application:,,,/Fonts/#Lato"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Right"/>
                            <TextBlock Text="{x:Static language:Shop.RevoCoinsLabel}"
                                       FontSize="12"
                                       FontFamily="pack://application:,,,/Fonts/#Lato"
                                       Foreground="LightGray"
                                       HorizontalAlignment="Right"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <TextBlock Grid.Row="1"
                           Text="{x:Static language:Shop.LisBoxesLabel}"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="White"
                           FontFamily="pack://application:,,,/Fonts/#Lato"
                           Margin="50,10,0,10"
                           HorizontalAlignment="Left"/>
                <Separator Grid.Row="1" Margin="0,45,0,0" Background="White" Opacity="0.3"/>

                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <UniformGrid Columns="3" Margin="0,40,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Rows="1">

                        <StackPanel Margin="20" HorizontalAlignment="Center">
                            <Image Source="pack://application:,,,/Assets/Other/SpecialBox.png" Width="120" Height="120" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="{x:Static language:Shop.SpecialBoxLabel}" Foreground="White" FontSize="16" FontFamily="pack://application:,,,/Fonts/#Lato" Margin="0,10,0,10" HorizontalAlignment="Center"/>

                            <Button Content="{x:Static language:Shop.BuyButton}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Width="120"
                                    HorizontalAlignment="Center"
                                    Command="{Binding BuySpecialCommand}"
                                    Cursor="Hand"/>
                        </StackPanel>

                        <StackPanel Margin="20" HorizontalAlignment="Center">
                            <Image Source="pack://application:,,,/Assets/Other/EpicBox.png" Width="120" Height="120" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="{x:Static language:Shop.EpicBoxLabel}" Foreground="White" FontSize="16" FontFamily="pack://application:,,,/Fonts/#Lato" Margin="0,10,0,10" HorizontalAlignment="Center"/>

                            <Button Content="{x:Static language:Shop.BuyButton}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Width="120"
                                    HorizontalAlignment="Center"
                                    Command="{Binding BuyEpicCommand}"
                                    Cursor="Hand"/>
                        </StackPanel>

                        <StackPanel Margin="20" HorizontalAlignment="Center">
                            <Image Source="pack://application:,,,/Assets/Other/LegendaryBox.png" Width="120" Height="120" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="{x:Static language:Shop.LegendaryBoxLabel}" Foreground="White" FontSize="16" FontFamily="pack://application:,,,/Fonts/#Lato" Margin="0,10,0,10" HorizontalAlignment="Center"/>

                            <Button Content="{x:Static language:Shop.BuyButton}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Width="120"
                                    HorizontalAlignment="Center"
                                    Command="{Binding BuyLegendaryCommand}"
                                    Cursor="Hand"/>
                        </StackPanel>

                    </UniformGrid>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>