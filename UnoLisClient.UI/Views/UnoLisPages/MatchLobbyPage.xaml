<Page x:Class="UnoLisClient.UI.Views.UnoLisPages.MatchLobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:controls="clr-namespace:UnoLisClient.UI.Views.Controls"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewModels="clr-namespace:UnoLisClient.UI.ViewModels.ViewModelEntities"
      mc:Ignorable="d"
      Title="MatchLobbyPage"
      Loaded="MatchLobbyPage_Loaded"
      Unloaded="MatchLobbyPage_Unloaded">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid Background="#88000000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#55000000" CornerRadius="12" Padding="20"
                Width="300" VerticalAlignment="Stretch" Margin="40,60,20,60">
            <StackPanel>
                <TextBlock Text="Invite Friends" FontSize="28" FontWeight="Bold" Foreground="White"
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Friends}" Margin="0,10,0,10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type viewModels:LobbyFriendViewModel}">
                                <Border Background="#33000000" CornerRadius="8" Padding="8" Margin="0,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse Width="40" Height="40" Fill="DarkGray" Grid.Column="0"/>

                                        <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Nickname}" FontWeight="Bold" Foreground="White" FontSize="14"/>
                                            <TextBlock FontSize="12">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="Offline"/>
                                                        <Setter Property="Foreground" Value="Gray"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsOnline}" Value="True">
                                                                <Setter Property="Text" Value="Online"/>
                                                                <Setter Property="Foreground" Value="LimeGreen"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>

                                        <Button Grid.Column="2" Width="60" Height="28" Margin="5,0,0,0"
                                                Command="{Binding DataContext.InviteFriendCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                CommandParameter="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
                                                    <Setter Property="Content" Value="Invite"/>
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Invited}" Value="True">
                                                            <Setter Property="Content" Value="Invited"/>
                                                            <Setter Property="Background" Value="Green"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsOnline}" Value="False">
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                            <Setter Property="Content" Value="Offline"/>
                                                            <Setter Property="Background" Value="#333"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Button Content="Send Invites" Width="200" Height="45" FontSize="16" Margin="0,15,0,0"
                        HorizontalAlignment="Center" Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding SendInvitesCommand}"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,20" Orientation="Vertical">
                <Button Content="READY" Width="180" Height="55" FontSize="17" Margin="0,5,0,15"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding ReadyCommand}"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,20,20,0">
                <Button Width="42" Height="42" Background="Transparent" BorderThickness="0"
                        Command="{Binding ToggleSettingsCommand}">
                    <Image Source="/Assets/settingsIcon.png" Width="26" Height="26"/>
                </Button>
                <Button Width="42" Height="42" Background="Transparent" BorderThickness="0"
                        Command="{Binding ToggleChatCommand}" Margin="0,12,0,0">
                    <Image Source="/Assets/friendsIcon.png" Width="26" Height="26"/>
                </Button>
            </StackPanel>

            <Border Grid.RowSpan="2" Grid.Column="1"
                    Background="Transparent"
                    Visibility="{Binding IsChatVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    MouseLeftButtonDown="ChatOverlay_MouseLeftButtonDown" />

            <controls:SettingsModal x:Name="SettingsModal"
                                    Grid.Column="1" Grid.RowSpan="2"
                                    Visibility="{Binding IsSettingsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    CloseRequested="CloseRequestedSettingsModal"
                                    LeaveMatchRequested="LeaveMatchRequestedSettingsModal" />

            <controls:ChatControl x:Name="ChatControl"
                                  Grid.Column="1" Grid.RowSpan="2"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Top"
                                  Margin="0,80,20,0"
                                  Visibility="{Binding IsChatVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </Grid>
    </Grid>
</Page>