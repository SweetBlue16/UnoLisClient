<Page x:Class="UnoLisClient.UI.Views.UnoLisPages.AvatarSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:language="clr-namespace:UnoLisClient.UI.Properties.Langs"
      mc:Ignorable="d"
      Title="AvatarSelectionPage">

    <Grid Background="Transparent" Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Scroll content -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Text="{x:Static language:Profile.ChangeAvatarLabel}"
                   FontSize="36"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,10,0,30"
                   HorizontalAlignment="Left"/>

        <!-- AVATAR SECTIONS -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Margin="0,0,0,20">

                <!-- COMMON -->
                <TextBlock Text="{x:Static language:Profile.SpecialSkinsLabel}"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Margin="0,0,0,10"/>
                <UniformGrid Columns="4" Margin="0,0,0,25">
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="100" Height="100" CornerRadius="10" Background="#22FFFFFF"
                                BorderBrush="#AAAAAA" BorderThickness="1">
                            <Image Source="/Assets/Avatars/Common1.png" Stretch="Uniform"/>
                        </Border>
                        <TextBlock Text="UNO Player"
                                   Foreground="White" FontSize="14"
                                   HorizontalAlignment="Center" Margin="0,6,0,0"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="100" Height="100" CornerRadius="10" Background="#22FFFFFF"
                                BorderBrush="#AAAAAA" BorderThickness="1">
                            <Image Source="/Assets/Avatars/Common2.png" Stretch="Uniform"/>
                        </Border>
                        <TextBlock Text="LIS Student"
                                   Foreground="White" FontSize="14"
                                   HorizontalAlignment="Center" Margin="0,6,0,0"/>
                    </StackPanel>
                </UniformGrid>

                <!-- SPECIAL -->
                <TextBlock Text="{x:Static language:Profile.SpecialSkinsLabel}"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Margin="0,10,0,10"/>
                <UniformGrid Columns="4" Margin="0,0,0,25">
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="100" Height="100" CornerRadius="10" Background="#33FFFFFF"
                                BorderBrush="LightGreen" BorderThickness="2">
                            <Image Source="/Assets/Avatars/Special1.png" Stretch="Uniform"/>
                        </Border>
                        <TextBlock Text="CC2 Projector"
                                   Foreground="White" FontSize="14"
                                   HorizontalAlignment="Center" Margin="0,6,0,0"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="100" Height="100" CornerRadius="10" Background="#33FFFFFF"
                                BorderBrush="LightGreen" BorderThickness="2">
                            <Image Source="/Assets/Avatars/Special2.png" Stretch="Uniform"/>
                        </Border>
                        <TextBlock Text="Volovan"
                                   Foreground="White" FontSize="14"
                                   HorizontalAlignment="Center" Margin="0,6,0,0"/>
                    </StackPanel>
                </UniformGrid>

                <!-- EPIC -->
                <TextBlock Text="{x:Static language:Profile.EpicSkinsLabel}"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Margin="0,10,0,10"/>
                <UniformGrid Columns="4" Margin="0,0,0,25">
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="100" Height="100" CornerRadius="10" Background="#33FFFFFF"
                                BorderBrush="DodgerBlue" BorderThickness="2">
                            <Image Source="/Assets/Avatars/Muffin.png" Stretch="Uniform"/>
                        </Border>
                        <TextBlock Text="Muffin"
                                   Foreground="White" FontSize="14"
                                   HorizontalAlignment="Center" Margin="0,6,0,0"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="100" Height="100" CornerRadius="10" Background="#33FFFFFF"
                                BorderBrush="DodgerBlue" BorderThickness="2">
                            <Image Source="/Assets/Avatars/DraLizbeth.png" Stretch="Uniform"/>
                        </Border>
                        <TextBlock Text="Dra. Lizbeth"
                                   Foreground="White" FontSize="14"
                                   HorizontalAlignment="Center" Margin="0,6,0,0"/>
                    </StackPanel>
                </UniformGrid>

                <!-- LEGENDARY -->
                <TextBlock Text="{x:Static language:Profile.LegendarySkinsLabel}"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Margin="0,10,0,10"/>
                <UniformGrid Columns="4" Margin="0,0,0,20">
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="100" Height="100" CornerRadius="10" Background="#33FFFFFF"
                                BorderBrush="Gold" BorderThickness="2">
                            <Image Source="/Assets/Avatars/ElRevo.png" Stretch="Uniform"/>
                        </Border>
                        <TextBlock Text="El Revo"
                                   Foreground="White" FontSize="14"
                                   HorizontalAlignment="Center" Margin="0,6,0,0"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="100" Height="100" CornerRadius="10" Background="#33FFFFFF"
                                BorderBrush="Gold" BorderThickness="2">
                            <Image Source="/Assets/Avatars/DrOcharan.png" Stretch="Uniform"/>
                        </Border>
                        <TextBlock Text="Dr. Ocharán"
                                   Foreground="White" FontSize="14"
                                   HorizontalAlignment="Center" Margin="0,6,0,0"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="100" Height="100" CornerRadius="10" Background="#33FFFFFF"
                                BorderBrush="Gold" BorderThickness="2">
                            <Image Source="/Assets/Avatars/DrSaul.png" Stretch="Uniform"/>
                        </Border>
                        <TextBlock Text="Dr. Saúl"
                                   Foreground="White" FontSize="14"
                                   HorizontalAlignment="Center" Margin="0,6,0,0"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="100" Height="100" CornerRadius="10" Background="#33FFFFFF"
                                BorderBrush="Gold" BorderThickness="2">
                            <Image Source="/Assets/Avatars/DraKaren.png" Stretch="Uniform"/>
                        </Border>
                        <TextBlock Text="Dra. Karen"
                                   Foreground="White" FontSize="14"
                                   HorizontalAlignment="Center" Margin="0,6,0,0"/>
                    </StackPanel>
                </UniformGrid>

            </StackPanel>
        </ScrollViewer>

        <!-- BOTONES -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="{x:Static language:Global.SaveButton}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="100" Height="40"
                    Margin="0,0,10,0"
                    Click="ClickSave"/>
            <Button Content="{x:Static language:Global.CancelButton}"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Width="100" Height="40"
                    Click="ClickCancel"/>
        </StackPanel>
    </Grid>
</Page>
