<Page x:Class="UnoLisClient.UI.Views.UnoLisPages.HowToPlayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UnoLisClient.UI.Views.UnoLisPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:language="clr-namespace:UnoLisClient.UI.Properties.Langs"
      Title="HowToPlayPage">
    <Page.Resources>
        <Style x:Key="HowToPlaySectionStyle" TargetType="Border">
            <Setter Property="Background" Value="#2A3B59"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <Style x:Key="HowToPlayTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/#Luckiest Guy"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>
        <Style x:Key="HowToPlayBodyStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/#Lato"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Foreground" Value="LightGray"/>
        </Style>
    </Page.Resources>

    <Border Background="#AA000000"
            CornerRadius="15"
            Padding="24"
            Margin="40">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,16">
                <Image Source="pack://application:,,,/Assets/Other/HowToPlay.png"
                       Width="50"
                       Height="50"
                       Margin="0,0,10,0"/>
                <TextBlock Grid.Row="0"
                       Text="{x:Static language:Global.HowToPlayLabel}"
                       FontSize="36"
                       Foreground="White"
                       FontFamily="pack://application:,,,/Fonts/#Luckiest Guy"
                       HorizontalAlignment="Left"/>
            </StackPanel>
            <Button Grid.Column="0"
                    Content="{x:Static language:Global.CancelButton}"
                    Style="{DynamicResource SecondaryButtonStyle}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Width="140"
                    Command="{Binding BackCommand}"/>
            <UniformGrid Grid.Row="1" Columns="2" Rows="2">

                <Border Style="{StaticResource HowToPlaySectionStyle}">
                    <StackPanel>
                        <Image Source="/Assets/Other/UNOButton.png" Height="80" />
                        <TextBlock Text="{x:Static language:Global.BasicRulesTitleLabel}" Style="{StaticResource HowToPlayTitleStyle}"/>
                        <TextBlock Text="{x:Static language:Global.BasicRulesLabel}" Style="{StaticResource HowToPlayBodyStyle}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource HowToPlaySectionStyle}">
                    <StackPanel>
                        <Image Source="/Assets/Other/Streak.png" Height="80" />
                        <TextBlock Text="{x:Static language:Global.StackingTitleLabel}" Style="{StaticResource HowToPlayTitleStyle}"/>
                        <TextBlock Text="{x:Static language:Global.StackingLabel}" Style="{StaticResource HowToPlayBodyStyle}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource HowToPlaySectionStyle}">
                    <StackPanel>
                        <Image Source="/Assets/Items/ThiefItem.png" Height="80" />
                        <TextBlock Text="{x:Static language:Global.ItemsTitleLabel}" Style="{StaticResource HowToPlayTitleStyle}"/>
                        <TextBlock Text="{x:Static language:Global.ItemsLabel}" Style="{StaticResource HowToPlayBodyStyle}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource HowToPlaySectionStyle}">
                    <StackPanel>
                        <Image Source="/Assets/Other/RevoCoins.png" Height="80" />
                        <TextBlock Text="{x:Static language:Global.ScoringTitleLabel}" Style="{StaticResource HowToPlayTitleStyle}"/>
                        <TextBlock Text="{x:Static language:Global.ScoringLabel}" Style="{StaticResource HowToPlayBodyStyle}"/>
                    </StackPanel>
                </Border>

            </UniformGrid>
        </Grid>
    </Border>
</Page>
