<Page x:Class="UnoLisClient.UI.Views.UnoLisPages.EditProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UnoLisClient.UI.Views.UnoLisPages"
      mc:Ignorable="d" 
      xmlns:language="clr-namespace:UnoLisClient.UI.Properties.Langs"
      xmlns:controls="clr-namespace:UnoLisClient.UI.Views.Controls"
      Title="EditProfilePage">

    <Border Background="#AA000000"
	        CornerRadius="15"
	        Padding="24"
	        MinWidth="350" MinHeight="300"
	        HorizontalAlignment="Center"
            VerticalAlignment="Center">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.ColumnSpan="2"
                   Grid.Row="0"
                   Content="{x:Static language:Profile.ChangeDataLabel}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,16"
                   VerticalAlignment="Top"
                   FontFamily="pack://application:,,,/Fonts/#Luckiest Guy"
                   Foreground="White"
                   FontSize="30"/>
            <StackPanel Grid.Column="0"
                        Grid.Row="1"
                        Margin="0,0,15,0">
                <Label Content="{x:Static language:SignIn.FullNameLabel}"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"
                       VerticalAlignment="Top"
                       FontFamily="pack://application:,,,/Fonts/#Lato"
                       Foreground="White"
                       FontSize="15"/>
                <TextBox x:Name="FullNameTextBox"
                         Style="{DynamicResource TextBoxStyle}"
                         Margin="0,0,32,16"/>
                <Label Content="{x:Static language:SignIn.NicknameLabel}"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"
                       VerticalAlignment="Top"
                       IsEnabled="False"
                       FontFamily="pack://application:,,,/Fonts/#Lato"
                       Foreground="White"
                       FontSize="15"/>
                <TextBox x:Name="NicknameTextBox"
                         Style="{DynamicResource TextBoxStyle}"
                         Margin="0,0,32,16"/>
                <Label Content="{x:Static language:Global.EmailLabel}"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"
                       VerticalAlignment="Top"
                       FontFamily="pack://application:,,,/Fonts/#Lato"
                       Foreground="White"
                       FontSize="15"/>
                <TextBox x:Name="EmailTextBox"
                         Style="{DynamicResource TextBoxStyle}"
                         Margin="0,0,32,16"/>
                <Label Content="{x:Static language:Global.PasswordLabel}"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"
                       VerticalAlignment="Top"
                       FontFamily="pack://application:,,,/Fonts/#Lato"
                       Foreground="White"
                       FontSize="15"/>
                <controls:VisiblePasswordField x:Name="PasswordField"
                                               Grid.ColumnSpan="2"
                                               Margin="0,0,0,16"/>
            </StackPanel>

            <StackPanel Grid.Column="1"
                        Grid.Row="1">
                <Label Content="{x:Static language:Profile.FacebookLinkLabel}"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"
                       VerticalAlignment="Top"
                       FontFamily="pack://application:,,,/Fonts/#Lato"
                       Foreground="White"
                       FontSize="15"/>      
                <TextBox x:Name="FacebookLinkTextBox"
                         Style="{DynamicResource TextBoxStyle}"
                         Margin="0,0,0,16"/>
                <Label Content="{x:Static language:Profile.InstagramLinkLabel}"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"
                       VerticalAlignment="Top"
                       FontFamily="pack://application:,,,/Fonts/#Lato"
                       Foreground="White"
                       FontSize="15"/>
                <TextBox x:Name="InstagramLinkTextBox"
                         Style="{DynamicResource TextBoxStyle}"
                         Margin="0,0,0,16"/>
                <Label Content="{x:Static language:Profile.TikTokLinkLabel}"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,5"
                       VerticalAlignment="Top"
                       FontFamily="pack://application:,,,/Fonts/#Lato"
                       Foreground="White"
                       FontSize="15"/>
                <TextBox x:Name="TikTokLinkTextBox"
                         Style="{DynamicResource TextBoxStyle}"
                         Margin="0,0,0,16"/>
            </StackPanel>
            <Button Content="{x:Static language:Global.SaveButton}"
                    Grid.Column="0"
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Style="{DynamicResource PrimaryButtonStyle}"
                    Height="56"
                    Margin="0,15,0,0"
                    Width="140"
                    Cursor="Hand"
                    Click="ClickSaveButton"/>
            <Button Content="{x:Static language:Global.CancelButton}"
                    Grid.Column="1"
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Style="{DynamicResource SecondaryButtonStyle}"
                    Height="56"
                    Margin="0,15,0,0"
                    Width="140"
                    Cursor="Hand"
                    Click="ClickCancelButton"/>
        </Grid>
    </Border>
</Page>
