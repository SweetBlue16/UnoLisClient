<Page x:Class="UnoLisClient.UI.Views.UnoLisPages.JoinMatchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:Langs="clr-namespace:UnoLisClient.UI.Properties.Langs"
      mc:Ignorable="d"
      Title="JoinMatchPage">

    <Grid>
        <Border Background="#AA000000"
                CornerRadius="15"
                Padding="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="500"
                Height="350">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0">

                <TextBlock Text="{x:Static Langs:Global.JoinMatchLabel}"
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           FontFamily="pack://application:,,,/Fonts/#Luckiest Guy"
                           Margin="0,0,0,30"/>

                <TextBox x:Name="CodeTextBox"
                         Style="{StaticResource TextBoxStyle}"
                         Width="250"
                         Height="40"
                         Tag="{x:Static Langs:Global.EnterMatchCodeLabel}"
                         FontSize="18"
                         HorizontalAlignment="Center"
                         TextAlignment="Center"
                         MaxLength="5"
                         CharacterCasing="Upper"
                         Text="{Binding LobbyCode, UpdateSourceTrigger=PropertyChanged}"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,40,0,0">
                    <Button Content="{x:Static Langs:Global.JoinButton}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Width="130"
                            Height="55"
                            FontSize="18"
                            Cursor="Hand"
                            Margin="0,0,20,0"
                            Command="{Binding JoinMatchCommand}"/>
                    <Button Content="{x:Static Langs:Global.BackJoinButton}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="140"
                            Height="59"
                            FontSize="18"
                            Cursor="Hand"
                            Margin="20,0,0,0"
                            Command="{Binding CancelCommand}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>