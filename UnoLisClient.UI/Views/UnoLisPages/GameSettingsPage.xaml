<Page x:Class="UnoLisClient.UI.Views.UnoLisPages.GameSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:language="clr-namespace:UnoLisClient.UI.Properties.Langs"
      mc:Ignorable="d"
      Title="GameSettingsPage">

    <Grid>
        <!-- Contenedor central -->
        <Border Background="#AA000000"
                CornerRadius="15"
                Padding="24"
                MinWidth="350" MinHeight="300"
                MaxWidth="600" MaxHeight="500"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="4" Color="Black" Opacity="0.5"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>  <!-- Header -->
                    <RowDefinition Height="*"/>     <!-- Configuración -->
                    <RowDefinition Height="Auto"/>  <!-- Botón Crear Partida -->
                </Grid.RowDefinitions>

                <!-- Header con título + botón cerrar -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{x:Static language:Global.GameSettingsLabel}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <!-- Botón cerrar -->
                    <Button x:Name="CloseButton"
                            Grid.Column="1"
                            Content="✖"
                            FontWeight="Bold"
                            FontSize="18"
                            Width="32" Height="32"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Cursor="Hand"
                            Click="ClickCloseButton">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#22FFFFFF"/>
                                                    <Setter Property="Foreground" Value="#FFD60A"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#44FFFFFF"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Configuración -->
                <StackPanel Grid.Row="1">

                    <!-- Players -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                        <Label Content="{x:Static language:Settings.PlayerSettingsLabel}"
                               Foreground="White" FontSize="16"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <RadioButton GroupName="Players" Content="2" Foreground="White"/>
                            <RadioButton GroupName="Players" Content="3" Foreground="White"/>
                            <RadioButton GroupName="Players" Content="4" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>

                    <Separator Margin="0,10"/>

                    <!-- Special Rules -->
                    <DockPanel Margin="0,5">
                        <Label Content="{x:Static language:Settings.SpecialRulesSettingsLabel}"
                               Foreground="White" FontSize="16" DockPanel.Dock="Left"/>
                        <CheckBox x:Name="SpecialRulesCheckBox"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"/>
                    </DockPanel>

                    <Separator Margin="0,10"/>

                    <!-- Re-Shuffle Deck -->
                    <DockPanel Margin="0,5">
                        <Label Content="{x:Static language:Settings.ReShuffleDeckSettingsLabel}"
                               Foreground="White" FontSize="16" DockPanel.Dock="Left"/>
                        <CheckBox x:Name="ReshuffleDeckCheckBox"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"/>
                    </DockPanel>

                    <Separator Margin="0,10"/>

                    <!-- Music -->
                    <DockPanel Margin="0,5">
                        <Label Content="{x:Static language:Settings.MusicSettingsLabel}"
                               Foreground="White" FontSize="16" DockPanel.Dock="Left"/>
                        <ToggleButton x:Name="MusicToggle"
                                      Width="40" Height="40"
                                      FontSize="20"
                                      Foreground="White"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      HorizontalAlignment="Right"
                                      Checked="CheckedMusicToggle"
                                      Unchecked="UncheckedMusicToggle">
                            <TextBlock Text="🎵"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </ToggleButton>
                    </DockPanel>

                    <Separator Margin="0,10"/>

                    <!-- Sound Effects -->
                    <DockPanel Margin="0,5">
                        <Label Content="{x:Static language:Settings.SoundEffectsSettingsLabel}"
                               Foreground="White" FontSize="16" DockPanel.Dock="Left"/>
                        <ToggleButton x:Name="SoundToggle"
                                      Width="40" Height="40"
                                      FontSize="20"
                                      Foreground="White"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      HorizontalAlignment="Right"
                                      Checked="CheckedSoundToggle"
                                      Unchecked="UncheckedSoundToggle">
                            <TextBlock Text="🔊"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </ToggleButton>
                    </DockPanel>
                </StackPanel>

                <!-- Botón Crear Partida -->
                <Button Grid.Row="2"
                        Content="Crear Partida"
                        Background="#2ECC71"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="16"
                        BorderThickness="0"
                        Height="45"
                        Width="180"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0"
                        Cursor="Hand"
                        Click="ClickCreateGameButton">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                    </Button.Effect>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#3FEA88"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#28B463"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>
