<Page x:Class="UnoLisClient.UI.Views.UnoLisPages.GameSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:language="clr-namespace:UnoLisClient.UI.Properties.Langs"
      xmlns:converters="clr-namespace:UnoLisClient.UI.Converters"
      mc:Ignorable="d"
      Title="GameSettingsPage">

    <Page.Resources>
        <converters:EqualityConverter x:Key="EqualityConverter"/>
    </Page.Resources>
    <Grid>
        <Border Background="#AA000000"
                CornerRadius="15"
                Padding="24"
                MinWidth="350" MinHeight="300"
                MaxWidth="600" MaxHeight="500"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="4" Color="Black" Opacity="0.5"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="SettingsIcon"
                           Source="pack://application:,,,/Assets/Other/Settings.png"
                           Width="40" Height="40"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"/>
                    <TextBlock Text="{x:Static language:Global.GameSettingsLabel}"
                               FontSize="28"
                               FontWeight="Bold"
                               Grid.Column="1"
                               FontFamily="pack://application:,,,/Fonts/#Luckiest Guy"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,20,10"/>
                    <Button x:Name="CloseButton"
                            Grid.Column="2"
                            Content="✖"
                            FontWeight="Bold"
                            FontSize="18"
                            Width="32" Height="32"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Cursor="Hand"
                            Command="{Binding CloseCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#22FFFFFF"/>
                                                    <Setter Property="Foreground" Value="#FFD60A"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#44FFFFFF"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
                <StackPanel Grid.Row="1">
                    <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                        <Label Content="{x:Static language:Settings.PlayerSettingsLabel}"
                               Foreground="White" FontSize="16" FontFamily="pack://application:,,,/Fonts/#Lato"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <RadioButton GroupName="Players" Content="2" Foreground="White"
                                         FontFamily="pack://application:,,,/Fonts/#Lato"
                                         Margin="0,0,10,0"
                                         IsChecked="{Binding PlayerCount, Converter={StaticResource EqualityConverter}, ConverterParameter=2}"
                                         Command="{Binding SetPlayerCountCommand}" CommandParameter="2"/>

                            <RadioButton GroupName="Players" Content="3" Foreground="White"
                                         FontFamily="pack://application:,,,/Fonts/#Lato"
                                         Margin="0,0,10,0"
                                         IsChecked="{Binding PlayerCount, Converter={StaticResource EqualityConverter}, ConverterParameter=3}"
                                         Command="{Binding SetPlayerCountCommand}" CommandParameter="3"/>

                            <RadioButton GroupName="Players" Content="4" Foreground="White"
                                         FontFamily="pack://application:,,,/Fonts/#Lato"
                                         IsChecked="{Binding PlayerCount, Converter={StaticResource EqualityConverter}, ConverterParameter=4}"
                                         Command="{Binding SetPlayerCountCommand}" CommandParameter="4"/>
                        </StackPanel>
                    </StackPanel>
                    <Separator Margin="0,10"/>
                    <DockPanel Margin="0,5">
                        <Label Content="{x:Static language:Settings.SpecialRulesSettingsLabel}"
                               Foreground="White" FontSize="16" DockPanel.Dock="Left"
                               FontFamily="pack://application:,,,/Fonts/#Lato"/>
                        <CheckBox x:Name="SpecialRulesCheckBox"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding IsSpecialRulesEnabled}"/>
                    </DockPanel>
                    <Separator Margin="0,10"/>

                    <DockPanel Margin="0,5">
                        <Label Content="{x:Static language:Settings.MusicSettingsLabel}"
                               Foreground="White" FontSize="16" DockPanel.Dock="Left"
                               FontFamily="pack://application:,,,/Fonts/#Lato"/>

                        <ToggleButton x:Name="MusicToggle"
                                      Width="40" Height="40"
                                      FontSize="20"
                                      Foreground="White"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      HorizontalAlignment="Right"
                                      IsChecked="{Binding IsMusicEnabled}">
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="🔇"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMusicEnabled}" Value="True">
                                                <Setter Property="Text" Value="🎵"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </ToggleButton>
                    </DockPanel>
                    <Separator Margin="0,10"/>
                    <DockPanel Margin="0,5">
                        <Label Content="{x:Static language:Settings.SoundEffectsSettingsLabel}"
                               Foreground="White" FontSize="16" DockPanel.Dock="Left"
                               FontFamily="pack://application:,,,/Fonts/#Lato"/>
                        <ToggleButton x:Name="SoundToggle"
                                      Width="40" Height="40"
                                      FontSize="20"
                                      Foreground="White"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      HorizontalAlignment="Right"
                                      IsChecked="{Binding IsSfxEnabled}">
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="🔈"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSfxEnabled}" Value="True">
                                                <Setter Property="Text" Value="🔊"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </ToggleButton>
                    </DockPanel>
                </StackPanel>
                <Button Grid.Row="2"
                        Content="Crear Partida"
                        Background="#2ECC71"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="16"
                        BorderThickness="0"
                        Height="45"
                        Width="180"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0"
                        Cursor="Hand"
                        Command="{Binding CreateMatchCommand}">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                    </Button.Effect>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#3FEA88"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#28B463"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>