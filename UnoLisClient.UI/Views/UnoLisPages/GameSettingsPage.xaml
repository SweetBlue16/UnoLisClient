<Page x:Class="UnoLisClient.UI.Views.UnoLisPages.GameSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:language="clr-namespace:UnoLisClient.UI.Properties.Langs"
      xmlns:converters="clr-namespace:UnoLisClient.UI.Converters"
      mc:Ignorable="d"
      Background="Transparent">

    <Page.Resources>
        <converters:EqualityConverter x:Key="EqualityConverter"/>
        <Style x:Key="RadioOptionStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/#Lato"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="12,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border x:Name="Circle"
                                    Width="22" Height="22"
                                    CornerRadius="11"
                                    BorderBrush="#FFD60A"
                                    BorderThickness="2"
                                    Background="Transparent"
                                    VerticalAlignment="Center"/>
                            <TextBlock Text="{TemplateBinding Content}"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>

                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Circle" Property="Background" Value="#FFD60A"/>
                                <Setter TargetName="Circle" Property="BorderBrush" Value="White"/>
                                <Setter Property="Foreground" Value="#FFD60A"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Circle" Property="BorderBrush" Value="#FFF08A"/>
                                <Setter Property="Foreground" Value="#FFEAD672"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <Border Background="#CC101010"
                CornerRadius="18"
                Padding="30"
                Width="520"
                MinHeight="450"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#FF303030"
                BorderThickness="2">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="4" Opacity="0.6"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="pack://application:,,,/Assets/Other/Settings.png"
                               Width="40" Height="40"
                               Margin="0,0,12,0"/>
                        <TextBlock Text="{x:Static language:Global.GameSettingsLabel}"
                                   FontSize="30"
                                   Foreground="White"
                                   FontFamily="pack://application:,,,/Fonts/#Luckiest Guy"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button x:Name="CloseButton"
                            Grid.Column="2"
                            Content="✖"
                            FontWeight="Bold"
                            FontSize="18"
                            Width="32" Height="32"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Cursor="Hand"
                            Command="{Binding CloseCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#22FFFFFF"/>
                                                    <Setter Property="Foreground" Value="#FFD60A"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#44FFFFFF"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
                <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="0,40,0,40">
                    <TextBlock Text="{x:Static language:Settings.PlayerSettingsLabel}"
                               Foreground="#FFD60A"
                               FontSize="22"
                               FontFamily="pack://application:,,,/Fonts/#Luckiest Guy"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,18"/>
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,10">
                        <RadioButton Content="2 jugadores"
                                         GroupName="Players"
                                         Margin="0,0,0,20"
                                         Style="{StaticResource RadioOptionStyle}"
                                         IsChecked="{Binding PlayerCount, Converter={StaticResource EqualityConverter}, ConverterParameter=2}"
                                         Command="{Binding SetPlayerCountCommand}"
                                         CommandParameter="2"/>
                        <RadioButton Content="3 jugadores"
                                         GroupName="Players"
                                         Margin="0,0,0,20"
                                         Style="{StaticResource RadioOptionStyle}"
                                         IsChecked="{Binding PlayerCount, Converter={StaticResource EqualityConverter}, ConverterParameter=3}"
                                         Command="{Binding SetPlayerCountCommand}"
                                         CommandParameter="3"/>

                        <RadioButton Content="4 jugadores"
                                         GroupName="Players"
                                         Margin="0,0,0,20"
                                         Style="{StaticResource RadioOptionStyle}"
                                         IsChecked="{Binding PlayerCount, Converter={StaticResource EqualityConverter}, ConverterParameter=4}"
                                         Command="{Binding SetPlayerCountCommand}"
                                         CommandParameter="4"/>

                    </StackPanel>
                </StackPanel>
                <Button Grid.Row="2"
                        Content="{x:Static language:Settings.CreateMatchLabel}"
                        FontSize="22"
                        Padding="10"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Cursor="Hand"
                        Command="{Binding CreateMatchCommand}">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" Opacity="0.6"/>
                    </Button.Effect>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>
