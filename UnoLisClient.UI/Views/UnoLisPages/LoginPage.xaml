<Page x:Class="UnoLisClient.UI.Views.UnoLisPages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UnoLisClient.UI.Views.UnoLisPages"
      mc:Ignorable="d" 
      xmlns:language="clr-namespace:UnoLisClient.UI.Properties.Langs"
      xmlns:controls="clr-namespace:UnoLisClient.UI.Views.Controls"
      xmlns:localConverters="clr-namespace:UnoLisClient.UI.Converters"
      xmlns:localHelpers="clr-namespace:UnoLisClient.UI.Utilities"
      Title="LoginPage">
    <Page.Resources>
        <localConverters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <localConverters:BooleanToVisibilityConverter x:Key="InvertedBoolToVisibilityConverter"
                                                 TrueValue="Collapsed" FalseValue="Visible"/>
    </Page.Resources>

	<Border Background="#AA000000"
			CornerRadius="15"
			Padding="24"
			MinWidth="350" MinHeight="300"
			HorizontalAlignment="Center"
            VerticalAlignment="Center">
		<StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,16">
                <Image Source="pack://application:,,,/Assets/Other/Login.png"
                       Width="40"
                       Height="40"
                       Margin="0,0,10,0"/>
                <Label Content="{x:Static language:SignIn.WelcomeLabel}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontFamily="pack://application:,,,/Fonts/#Luckiest Guy"
                   Foreground="White"
                   FontSize="30"/>
            </StackPanel>
            <Label Content="{x:Static language:SignIn.NicknameLabel}"
                   HorizontalAlignment="Left"
                   Margin="0,0,34,0"
                   VerticalAlignment="Top"
                   FontFamily="pack://application:,,,/Fonts/#Lato"
                   Foreground="White"
                   FontSize="15"/>
            <TextBox x:Name="NicknameTextBox"
                     Style="{DynamicResource TextBoxStyle}"
                     Margin="9,0,0,16"
                     Width="298"
                     HorizontalAlignment="Left"
                     Text="{Binding Nickname, UpdateSourceTrigger=PropertyChanged}"
                     MaxLength="45"/>
            <Label Content="{x:Static language:Global.PasswordLabel}"
                   HorizontalAlignment="Left"
                   Margin="0,0,65,0"
                   VerticalAlignment="Top"
                   FontFamily="pack://application:,,,/Fonts/#Lato"
                   Foreground="White"
                   FontSize="15"/>
            <controls:VisiblePasswordField x:Name="PasswordField"
                                           Margin="0,0,0,16"
                                           Password="{Binding Password,
                                                      Mode=TwoWay,
                                                      UpdateSourceTrigger=PropertyChanged}"
                                           HorizontalAlignment="Left"
                                           Width="350"/>
            <DockPanel Margin="10,5">
                <Button Content="{x:Static language:SignIn.LoginButton}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Style="{DynamicResource PrimaryButtonStyle}"
                        Height="56"
                        Margin="0,0,15,0"
                        Width="140"
                        Cursor="Hand"
                        Command="{Binding LoginCommand}"
                        IsEnabled="{Binding IsLoading,
                                    Converter={StaticResource InvertedBoolToVisibilityConverter}, ConverterParameter='Invert'}"/>
                <Button Content="{x:Static language:Global.CancelButton}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Style="{DynamicResource SecondaryButtonStyle}"
                        Height="56"
                        Margin="0,0,0,0"
                        Width="140"
                        Cursor="Hand"
                        Command="{Binding CancelCommand}"
                        IsEnabled="{Binding IsLoading,
                                    Converter={StaticResource BoolToVisibilityConverter}}"/>
            </DockPanel>
            <Label Content="{x:Static language:SignIn.NotRegisteredLabel}"
                   HorizontalAlignment="Center"
                   Margin="16,16,0,0"
                   VerticalAlignment="Top"
                   FontFamily="pack://application:,,,/Fonts/#Lato"
                   Foreground="White"
                   FontSize="10"
                   Cursor="Hand">
                <Label.InputBindings>
                    <MouseBinding MouseAction="LeftClick"
                                  Command="{Binding GoToRegisterCommand}"/>
                </Label.InputBindings>
            </Label>
        </StackPanel>
	</Border>
</Page>
