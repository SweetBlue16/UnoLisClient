<Page x:Class="UnoLisClient.UI.Views.UnoLisPages.SelectBackgroundPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:Langs="clr-namespace:UnoLisClient.UI.Properties.Langs"
      mc:Ignorable="d"
      Title="Select Background">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="SelectableCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2A3B59"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.4"/>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A4B69"/>
                </Trigger>

                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="BorderBrush" Value="#32CD32"/>
                    <Setter Property="BorderThickness" Value="4"/>
                    <Setter Property="Background" Value="#1A2B49"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#32CD32" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CardTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/#Luckiest Guy"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>
    </Page.Resources>

    <Border Background="#AA000000"
            CornerRadius="15"
            Padding="30"
            Margin="40"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            MaxWidth="900" MaxHeight="700">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="{x:Static Langs:Global.BackgroundSelectLabel}"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="White"
                       FontFamily="pack://application:,,,/Fonts/#Luckiest Guy"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2"/>
                </TextBlock.Effect>
            </TextBlock>

            <ItemsControl Grid.Row="1" ItemsSource="{Binding Backgrounds}">

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2" Rows="2"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource SelectableCardStyle}">
                            <Border.InputBindings>
                                <MouseBinding Gesture="LeftClick" 
                                              Command="{Binding DataContext.SelectBackgroundCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                              CommandParameter="{Binding}"/>
                            </Border.InputBindings>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" CornerRadius="8" ClipToBounds="True">
                                    <Image Source="{Binding ImagePath}" Stretch="UniformToFill"/>
                                </Border>

                                <TextBlock Grid.Row="1" Text="{Binding Name}" Style="{StaticResource CardTitleStyle}"/>

                                <Border Grid.Row="0" Grid.RowSpan="2" 
                                        HorizontalAlignment="Right" VerticalAlignment="Top" 
                                        Margin="5" Background="#CC000000" CornerRadius="15" Padding="5"
                                        Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="✔" Foreground="#32CD32" FontWeight="Bold" FontSize="16"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Botón Confirmar -->
            <Button Grid.Row="2"
                    Content="{x:Static Langs:Global.GoButton}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="250" Height="50" FontSize="18"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    Cursor="Hand"
                    Command="{Binding ConfirmCommand}">
                <Button.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                </Button.Effect>
            </Button>
        </Grid>
    </Border>
</Page>