<Page x:Class="UnoLisClient.UI.Views.UnoLisPages.MatchBoardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UnoLisClient.UI.Views.UnoLisPages"
      mc:Ignorable="d"
      xmlns:language="clr-namespace:UnoLisClient.UI.Properties.Langs"
      xmlns:vm="clr-namespace:UnoLisClient.UI.ViewModels"
      xmlns:controls="clr-namespace:UnoLisClient.UI.Views.Controls"
      d:DataContext="{d:DesignInstance vm:MatchBoardViewModel}"
      Title="MatchBoardPage"
      Loaded="MatchBoardPage_Loaded">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/GameDataTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="160" />
                <RowDefinition Height="*" />
                <RowDefinition Height="160" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="230" />
            </Grid.ColumnDefinitions>

            <controls:OpponentHandControl Grid.Row="0"
                                          Grid.Column="1"
                                          DataContext="{Binding OpponentTop}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Top"/>
            <controls:OpponentHandControl Grid.Row="1"
                                          Grid.Column="0"
                                          DataContext="{Binding OpponentLeft}"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"/>
            <controls:OpponentHandControl Grid.Row="1"
                                          Grid.Column="2"
                                          DataContext="{Binding OpponentRight}"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center"/>
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" 
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Width="90" Height="140" Margin="10">
                    <Image Source="pack://application:,,,/Assets/Cards/BackUNOCard.png" ToolTip="Robar Carta"/>
                    <Border.InputBindings>
                        <MouseBinding MouseAction="LeftClick" Command="{Binding DrawCardCommand}" />
                    </Border.InputBindings>
                </Border>
                <Image Source="{Binding DiscardPileTopCard.ImagePath}" Width="90" Height="140" Margin="10" />
            </StackPanel>
            
            <ScrollViewer Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                          HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Disabled"
                          Margin="150,0,150,0">
                <ItemsControl ItemsSource="{Binding PlayerHand}"
                              ItemTemplate="{StaticResource PlayerCardTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>

            <Border Grid.Column="2" Grid.Row="0"
                    BorderBrush="#80000000"
                    CornerRadius="15"
                    Width="Auto"
                    Margin="10">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="10">
                    <StackPanel Margin="0,0,10,0">
                        <TextBlock Text="{x:Static language:Match.TurnLabel}" 
                                   FontSize="14" Foreground="Gray" FontFamily="pack://application:,,,/Fonts/#lato"
                                   HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding CurrentTurnNickname}" 
                                   FontSize="18" FontWeight="Bold" Foreground="White"
                                   HorizontalAlignment="Right"
                                   MaxWidth="110"/>
                    </StackPanel>
                    <Image Source="pack://application:,,,/Assets/Other/NowPlaying.png"
                           Height="60" Width="60"
                           Margin="0,0,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <Grid>
            <ItemsControl ItemsSource="{Binding Items}" 
              ItemTemplate="{StaticResource ItemTemplate}"
              HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2" Rows="2"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>

            <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,50,50"
                    Command="{Binding CallUnoCommand}"
                    Visibility="{Binding IsUnoButtonVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                    Background="Transparent">
                <Button.Content>
                    <Image Source="/Assets/Other/UNOButton.png"
                           Stretch="Uniform"
                           Width="70"
                           Height="70"/>
                </Button.Content>
            </Button>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20">
                <Button Content="{x:Static language:Global.SettingsLabel}"
                        Command="{Binding ToggleSettingsCommand}"
                        Style="{DynamicResource PrimaryButtonStyle}"/>
            </StackPanel>

            <Grid Background="#80000000"
                  Visibility="{Binding IsSettingsMenuVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                <controls:SettingsModal HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Width="400"
                                        Height="500"
                                        CloseRequested="CloseRequestedSettingsModal"
                                        LeaveMatchRequested="LeaveMatchRequestedSettingsModal"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
