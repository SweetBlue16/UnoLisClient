<Page x:Class="UnoLisClient.UI.Views.UnoLisPages.MatchResultsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:UnoLisClient.UI.ViewModels"
      mc:Ignorable="d" 
      Title="MatchResultsPage">

    <Grid Background="#FF1A1A1A">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="MATCH FINISHED!" 
                       Foreground="White" FontSize="40" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,30">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#FFD700" BlurRadius="20" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>

            <Border Background="#33FFFFFF" CornerRadius="20" Padding="30" Margin="0,0,0,30" HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="WINNER" Foreground="Gold" HorizontalAlignment="Center" FontWeight="Bold" FontSize="20" Margin="0,0,0,10"/>

                    <Border Width="120" Height="120" CornerRadius="60" Margin="10" BorderBrush="Gold" BorderThickness="4">
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding Winner.AvatarImagePath}" 
                                        Stretch="UniformToFill"/>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="Gold" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                        </Border.Effect>
                    </Border>

                    <TextBlock Text="{Binding Winner.Nickname}" 
                               Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>

                    <TextBlock Text="{Binding Winner.Score, StringFormat='+{0} Points'}" 
                               Foreground="#FFD700" FontSize="18" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <ItemsControl ItemsSource="{Binding Losers}" Margin="0,0,0,30">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#11FFFFFF" CornerRadius="10" Margin="5" Padding="15,8" Width="350">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Rank, StringFormat='#{0}'}" 
                                           Foreground="Gray" FontSize="20" VerticalAlignment="Center" FontWeight="Bold"/>

                                <Border Grid.Column="1" Width="34" Height="34" CornerRadius="17" Margin="5,0" BorderBrush="White" BorderThickness="1">
                                    <Border.Background>
                                        <ImageBrush ImageSource="{Binding AvatarImagePath}" Stretch="UniformToFill"/>
                                    </Border.Background>
                                </Border>

                                <TextBlock Grid.Column="2" Text="{Binding Nickname}" 
                                           Foreground="White" FontSize="18" VerticalAlignment="Center" Margin="10,0"/>

                                <StackPanel Grid.Column="3" VerticalAlignment="Center" Orientation="Horizontal">
                                    <TextBlock Text="{Binding Score}" Foreground="#AAAAAA" FontSize="16" FontWeight="Bold"/>
                                    <TextBlock Text=" pts" Foreground="#AAAAAA" FontSize="14"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button Content="Return to Menu" 
                    Command="{Binding BackToMenuCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="220" 
                    Height="80" 
                    FontSize="18"
                    Cursor="Hand"
                    Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>