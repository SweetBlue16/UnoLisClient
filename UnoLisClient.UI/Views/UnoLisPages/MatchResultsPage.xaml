<Page x:Class="UnoLisClient.UI.Views.UnoLisPages.MatchResultsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:UnoLisClient.UI.ViewModels"
      mc:Ignorable="d" 
      Title="MatchResultsPage">

    <Grid Background="#FF1A1A1A">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="MATCH FINISHED!" 
                       Foreground="White" FontSize="40" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,30">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#FFD700" BlurRadius="20" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>

            <Border Background="#33FFFFFF" CornerRadius="20" Padding="20" Margin="0,0,0,30" HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="WINNER" Foreground="Gold" HorizontalAlignment="Center" FontWeight="Bold"/>

                    <Border Width="100" Height="100" CornerRadius="50" Margin="10" BorderBrush="Gold" BorderThickness="4">
                        <Border.Background>
                            <ImageBrush ImageSource="/Assets/Other/LobbyHost.png" Stretch="UniformToFill"/>
                        </Border.Background>
                    </Border>

                    <TextBlock Text="{Binding Winner.Nickname}" 
                               Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <ItemsControl ItemsSource="{Binding Results}" Margin="0,0,0,30">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#11FFFFFF" CornerRadius="10" Margin="5" Padding="15,5" Width="300">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Rank, StringFormat='#{0}'}" 
                                           Foreground="Gray" FontSize="18" VerticalAlignment="Center" FontWeight="Bold"/>

                                <TextBlock Grid.Column="1" Text="{Binding Nickname}" 
                                           Foreground="White" FontSize="18" VerticalAlignment="Center" Margin="10,0"/>

                                <TextBlock Grid.Column="2" Text="{Binding Score, StringFormat='Score: {0}'}" 
                                           Foreground="#AAAAAA" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button Content="Return to Menu" Command="{Binding BackToMenuCommand}"
                    Width="200" Height="40" FontSize="16" FontWeight="Bold"
                    Style="{DynamicResource PrimaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>