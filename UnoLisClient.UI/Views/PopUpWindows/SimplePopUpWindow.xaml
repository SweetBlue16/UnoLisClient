<Window x:Class="UnoLisClient.UI.Views.PopUpWindows.SimplePopUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnoLisClient.UI.Views.PopUpWindows"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:UnoLisClient.UI.Properties.Langs"
        Title="SimplePopUpWindow" Height="280" Width="450"
        WindowStartupLocation="CenterScreen" Background="#1B263B">
    <Grid>
        <StackPanel Margin="20">
            <Label x:Name="TitleLabel"
                   Content="{x:Static language:Global.TitlePlaceholderLabel}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,16"
                   VerticalAlignment="Top"
                   FontFamily="pack://application:,,,/Fonts/#Luckiest Guy"
                   Foreground="White"
                   FontSize="40"/>
            <TextBlock x:Name="MessageTextBlock"
                       HorizontalAlignment="Center"
                       TextWrapping="WrapWithOverflow"
                       Text="{x:Static language:Global.MessagePlaceholderLabel}"
                       VerticalAlignment="Center"
                       FontFamily="pack://application:,,,/Fonts/#Lato"
                       Foreground="White"
                       FontSize="20"
                       Margin="0,0,0,24"
                       Height="51"/>
            <Button Content="{x:Static language:Global.OkButton}"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,24"
                    VerticalAlignment="Top"
                    Style="{DynamicResource PrimaryButtonStyle}"
                    Height="39"
                    Width="154"
                    Click="ClickOkButton"/>
        </StackPanel>
    </Grid>
</Window>
