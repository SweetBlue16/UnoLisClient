<Window x:Class="UnoLisClient.UI.Views.PopUpWindows.SimplePopUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnoLisClient.UI.Views.PopUpWindows"
        xmlns:language="clr-namespace:UnoLisClient.UI.Properties.Langs"
        Title="SimplePopUpWindow"
        Width="450"
        SizeToContent="Height"
        MaxHeight="400" WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen" Background="Transparent">
    <Border BorderBrush="Gold"
            Background="#1B263B"
            BorderThickness="3"
            CornerRadius="15">
        <StackPanel Margin="20">
            <DockPanel>
                <Image x:Name="IconImage"
                       Height="80" Width="80"
                       Margin="0,0,10,20"
                       HorizontalAlignment="Center"
                       Stretch="Uniform"
                       Visibility="Collapsed"/>
                <TextBlock x:Name="TitleLabel"
                           Text="{x:Static language:Global.TitlePlaceholderLabel}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,0,0,25"
                           FontFamily="pack://application:,,,/Fonts/#Luckiest Guy"
                           Foreground="White"
                           FontSize="40"/>
            </DockPanel>
            <TextBlock x:Name="MessageTextBlock"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Text="{x:Static language:Global.MessagePlaceholderLabel}"
                       VerticalAlignment="Center"
                       FontFamily="pack://application:,,,/Fonts/#Lato"
                       Foreground="White"
                       FontSize="20"
                       Margin="0,0,0,24"
                       MinHeight="51"/>
            <Button Content="{x:Static language:Global.OkButton}"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,24"
                    VerticalAlignment="Top"
                    Style="{DynamicResource PrimaryButtonStyle}"
                    Height="39"
                    Width="154"
                    Click="ClickOkButton"/>
        </StackPanel>
    </Border>
</Window>
