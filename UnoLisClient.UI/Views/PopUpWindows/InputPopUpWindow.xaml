<Window x:Class="UnoLisClient.UI.Views.PopUpWindows.InputPopUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnoLisClient.UI.Views.PopUpWindows"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:UnoLisClient.UI.Properties.Langs"
        Title="InputPopUpWindow" Height="340" Width="450"
        WindowStartupLocation="CenterScreen" Background="#1B263B">
    <Grid>
        <StackPanel Margin="20">
            <Label x:Name="TitleLabel"
                   Content="{x:Static language:Global.TitlePlaceholderLabel}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,16"
                   VerticalAlignment="Top"
                   FontFamily="pack://application:,,,/Fonts/#Luckiest Guy"
                   Foreground="White"
                   FontSize="40"/>
            <TextBlock x:Name="MessageTextBlock"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Text="{x:Static language:Global.MessagePlaceholderLabel}"
                       VerticalAlignment="Top"
                       FontFamily="pack://application:,,,/Fonts/#Lato"
                       Foreground="White"
                       FontSize="18"
                       Margin="0,0,0,16"/>
            <TextBox x:Name="InputTextBox"
                     Style="{DynamicResource TextBoxStyle}"
                     Margin="0,0,0,16"
                     TextChanged="InputTextBoxTextChanged"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,30,0,0">
                <Button x:Name="OkButton"
                        Content="{x:Static language:Global.GoButton}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Style="{DynamicResource PrimaryButtonStyle}"
                        Height="56"
                        Margin="0,0,16,0"
                        Width="154"
                        Click="ClickOkButton"/> 
                <Button Content="{x:Static language:Global.CancelButton}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Style="{DynamicResource SecondaryButtonStyle}"
                        Height="56"
                        Margin="0,0,0,0"
                        Width="154"
                        Click="ClickCancelButton"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
