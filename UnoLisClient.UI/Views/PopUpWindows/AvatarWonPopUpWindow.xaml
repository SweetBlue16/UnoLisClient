<Window x:Class="UnoLisClient.UI.Views.PopUpWindows.AvatarWonPopUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:language="clr-namespace:UnoLisClient.UI.Properties.Langs"
        mc:Ignorable="d"
        Title="AvatarWonPopUpWindow"
        Width="450"
        SizeToContent="Height"
        MaxHeight="500" 
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen" 
        Background="Transparent">

    <Border BorderBrush="Gold"
            Background="#1B263B"
            BorderThickness="3"
            CornerRadius="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="Gold" Opacity="0.4"/>
        </Border.Effect>

        <StackPanel Margin="20">
            <TextBlock x:Name="TitleLabel"
                       Text="CONGRATULATIONS!"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,0,20"
                       FontFamily="pack://application:,,,/Fonts/#Luckiest Guy"
                       Foreground="White"
                       FontSize="36"/>

            <Border BorderBrush="White" BorderThickness="2" CornerRadius="10" 
                    HorizontalAlignment="Center" Margin="0,0,0,20"
                    Background="#22FFFFFF">
                <Image x:Name="AvatarImage"
                       Height="140" 
                       Width="140"
                       Margin="10"
                       Stretch="Uniform"/>
            </Border>

            <TextBlock x:Name="MessageTextBlock"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Text="You won a new avatar!"
                       TextAlignment="Center"
                       FontFamily="pack://application:,,,/Fonts/#Lato"
                       Foreground="White"
                       FontSize="20"
                       Margin="0,0,0,24"/>

            <Button Content="{x:Static language:Global.OkButton}"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,10"
                    Style="{DynamicResource PrimaryButtonStyle}"
                    Height="39"
                    Width="154"
                    Click="ClickOkButton"/>
        </StackPanel>
    </Border>
</Window>