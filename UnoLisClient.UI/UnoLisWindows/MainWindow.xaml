<Window x:Class="UnoLisClient.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnoLisClient.UI"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Loaded="MainWindow_Loaded">

    <Grid>
        <MediaElement x:Name="VideoBackground"
                      Source="Assets/marioDesktop.mp4"
                      LoadedBehavior="Play"
                      UnloadedBehavior="Manual"
                      Stretch="Fill"
                      IsHitTestVisible="False"
                      MediaEnded="VideoBackground_MediaEnded"/>
        <MediaElement x:Name="MusicPlayer"
                      Source="Assets/jazzBackground.mp3"
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Manual"
                      Volume="0.5"
                      MediaEnded="MusicPlayer_MediaEnded"
                      Visibility="Hidden"/>
        <Frame x:Name="MainFrame"
               NavigationUIVisibility="Hidden"
               Background="Transparent"/>
    </Grid>
</Window>
