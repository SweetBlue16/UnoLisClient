<Page x:Class="UnoLisClient.UI.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:language="clr-namespace:UnoLisClient.UI.Properties.Langs"
      mc:Ignorable="d"
      Title="SettingsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 🔳 Border centrado y responsivo -->
        <Border Grid.Row="0" Grid.Column="0"
                Background="#AA000000"
                CornerRadius="15"
                Padding="24"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MinWidth="300" MinHeight="200"
                MaxWidth="600" MaxHeight="400"
                Margin="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="4" Color="Black" Opacity="0.5"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Título -->
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Language -->
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Volume -->
                </Grid.RowDefinitions>

                <!-- Título -->
                <Label x:Name="SettingsTitleLabel"
                       Content="{x:Static language:Global.SettingsLabel}"
                       FontSize="28" FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

                <!-- Idioma -->
                <Grid Grid.Row="2" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <Label x:Name="LanguageLabel"
                           Content="{x:Static language:Settings.LanguageLabel}"
                           Foreground="White"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>

                    <ComboBox x:Name="LanguageComboBox"
                              Style="{StaticResource ComboBoxStyle}"
                              Width="150" Height="35"
                              FontSize="14"
                              HorizontalAlignment="Right"
                              SelectionChanged="LanguageComboBox_SelectionChanged"
                              Grid.Column="1">
                        <ComboBoxItem Content="{x:Static language:Settings.EnglishComboItem}" Tag="en-US"/>
                        <ComboBoxItem Content="{x:Static language:Settings.SpanishComboItem}" Tag="es-MX"/>
                    </ComboBox>
                </Grid>

                <!-- Volumen -->
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <Label x:Name="VolumeLabel"
                           Content="{x:Static language:Global.VolumeLabel}"
                           Foreground="White"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>

                    <Slider x:Name="VolumeSlider"
                            Minimum="0" Maximum="100" Value="50"
                            TickFrequency="5" IsSnapToTickEnabled="True"
                            Width="150" Height="24"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Grid.Column="1"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
