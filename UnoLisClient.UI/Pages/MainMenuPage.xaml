<Page x:Class="UnoLisClient.UI.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:language="clr-namespace:UnoLisClient.UI.Properties.Langs"
      mc:Ignorable="d"
      Title="MainMenuPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Centro -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- 🔝 Header con íconos -->
        <Grid Grid.Row="0" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 👤 Perfil -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Cursor="Hand"
                        MouseDown="ProfileLabel_MouseDoubleClick">
                <Image Source="/Assets/profileIcon.png"
                       Width="26" Height="26"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"/>
                <Label x:Name="ProfileLabel"
                       Content="{x:Static language:Global.ProfileLabel}"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"/>
            </StackPanel>

            <!-- 👥 Amigos -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                <Image Source="/Assets/friendsIcon.png"
                       Width="26" Height="26"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"/>
                <Label x:Name="FriendsLabel"
                       Content="{x:Static language:Global.FriendsListLabel}"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- 🟡 Centro -->
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,40">
            <Label x:Name="TitleLabel"
                   Content="{x:Static language:Global.AppNameLabel}"
                   FontSize="36"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"/>

            <Button x:Name="PlayButton"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Content="{x:Static language:Global.PlayButton}"
                    Cursor="Hand"
                    Width="200"
                    Height="60"
                    FontSize="15"
                    Click="PlayButton_Click"/>
        </StackPanel>

        <!-- 🔻 Footer con íconos -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,20,0,20">

            <!-- 🛍️ Tienda -->
            <StackPanel Cursor="Hand" MouseDown="ShopLabel_MouseDoubleClick" HorizontalAlignment="Center" Margin="20,0">
                <Image Source="/Assets/shopIcon.png"
                       Width="40" Height="40"
                       HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <Label x:Name="ShopLabel"
                       Content="{x:Static language:Global.ShopLabel}"
                       FontSize="14"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- ⚙️ Ajustes -->
            <StackPanel Cursor="Hand" MouseDown="SettingsLabel_MouseDoubleClick" HorizontalAlignment="Center" Margin="20,0">
                <Image Source="/Assets/settingsIcon.png"
                       Width="40" Height="40"
                       HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <Label x:Name="SettingsLabel"
                       Content="{x:Static language:Global.SettingsLabel}"
                       FontSize="14"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- 📊 Estadísticas -->
            <StackPanel Cursor="Hand" HorizontalAlignment="Center" Margin="20,0">
                <Image Source="/Assets/statsIcon.png"
                       Width="40" Height="40"
                       HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <Label x:Name="StatisticsLabel"
                       Content="{x:Static language:Global.StatisticsLabel}"
                       FontSize="14"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- ❓ Cómo jugar -->
            <StackPanel Cursor="Hand" HorizontalAlignment="Center" Margin="20,0">
                <Image Source="/Assets/rulesIcon.png"
                       Width="40" Height="40"
                       HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <Label x:Name="HowToPlayLabel"
                       Content="{x:Static language:Global.HowToPlayLabel}"
                       FontSize="14"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- 🚪 Salir -->
            <StackPanel Cursor="Hand" MouseDown="ExitLabel_MouseDoubleClick" HorizontalAlignment="Center" Margin="20,0">
                <Image Source="/Assets/exitIcon.png"
                       Width="40" Height="40"
                       HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <Label x:Name="ExitLabel"
                       Content="{x:Static language:Global.ExitLabel}"
                       FontSize="14"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
