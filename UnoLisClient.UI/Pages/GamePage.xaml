<Page x:Class="UnoLisClient.UI.Pages.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:Langs="clr-namespace:UnoLisClient.UI.Properties.Langs"
      mc:Ignorable="d"
      Title="GamePage">

    <Grid>
        <StackPanel Grid.Row="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Margin="0,0,0,60">
            <!-- Logo UNO con animación -->
            <Image Source="/Assets/unoLogoPixelArt.png"
                   Width="248" Height="226"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,50,0,0"
                   RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                        <RotateTransform Angle="0"/>
                    </TransformGroup>
                </Image.RenderTransform>
                <Image.Triggers>
                    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <!-- Escala X -->
                                <DoubleAnimationUsingKeyFrames 
                                    Storyboard.TargetProperty="(RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                    Duration="0:0:3">
                                    <EasingDoubleKeyFrame KeyTime="0:0:0" Value="1.0"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0.8"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1.2"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.6" Value="1.0"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:3" Value="1.0"/>
                                </DoubleAnimationUsingKeyFrames>
                                <!-- Escala Y -->
                                <DoubleAnimationUsingKeyFrames 
                                    Storyboard.TargetProperty="(RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                    Duration="0:0:3">
                                    <EasingDoubleKeyFrame KeyTime="0:0:0" Value="1.0"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0.8"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1.2"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.6" Value="1.0"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:3" Value="1.0"/>
                                </DoubleAnimationUsingKeyFrames>
                                <!-- Rotación -->
                                <DoubleAnimationUsingKeyFrames 
                                    Storyboard.TargetProperty="(RenderTransform).(TransformGroup.Children)[1].(RotateTransform.Angle)"
                                    Duration="0:0:3">
                                    <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="15"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.6" Value="0"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:3" Value="0"/>
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Image.Triggers>
            </Image>
        </StackPanel>

        <!--  Contenedor para botones -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,50">
            <!-- Botón Login -->
            <Button x:Name="LoginButton"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Content="{x:Static Langs:SignIn.LoginButton}"
                    FontSize="15"
                    Cursor="Hand"
                    HorizontalContentAlignment="Center"
                    Height="60"
                    Width="230"
                    Margin="0,0,20,0"
                    RenderTransformOrigin="0.505,0.772"
                    Click="LoginButtonClick"/>

            <!-- Botón Invitado -->
            <Button x:Name="PlayGuestButton"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Content="{x:Static Langs:SignIn.PlayAsGuestButton}"
                    Cursor="Hand"
                    FontSize="15"
                    HorizontalContentAlignment="Center"
                    Height="60"
                    Width="230"
                    RenderTransformOrigin="0.497,0.751"
                    Click="PlayGuestButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
