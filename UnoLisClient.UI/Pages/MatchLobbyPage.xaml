<Page x:Class="UnoLisClient.UI.Pages.MatchLobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="MatchLobbyPage">

    <Grid Background="#88000000">
        <!-- Fondo translúcido oscuro -->

        <!-- 📋 Lista de jugadores a la izquierda -->
        <Border Background="#55000000"
                CornerRadius="12"
                Padding="20"
                Width="260"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Left"
                Margin="40,60,0,60">
            <StackPanel>
                <TextBlock Text="Players"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <ListBox x:Name="PlayersListBox"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="White"
                         ScrollViewer.VerticalScrollBarVisibility="Hidden"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Avatar -->
                                <Ellipse Width="36" Height="36" Fill="#888" Grid.Column="0"/>
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="{Binding PlayerName}"
                                               FontWeight="Bold"
                                               FontSize="14"
                                               Foreground="White"/>
                                    <TextBlock Text="{Binding Status}"
                                               FontSize="12"
                                               Foreground="LightGreen"/>
                                </StackPanel>
                                <!-- Icono de estado -->
                                <TextBlock Text="{Binding RoleIcon}"
                                           Grid.Column="2"
                                           FontSize="16"
                                           Foreground="Gold"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- 🎮 Zona central con jugadores y logo -->
        <Grid>
            <!-- Jugador superior -->
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,60,0,0">
                <Ellipse Width="70" Height="70" Fill="DarkGray"/>
                <TextBlock Text="Player 3"
                           FontSize="16"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,6,0,0"/>
            </StackPanel>

            <!-- Jugador izquierdo -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="120,0,0,0">
                <Ellipse Width="70" Height="70" Fill="DarkGray"/>
                <TextBlock Text="Player 1"
                           FontSize="16"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,6,0,0"/>
            </StackPanel>

            <!-- Jugador derecho -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,120,0">
                <Ellipse Width="70" Height="70" Fill="DarkGray"/>
                <TextBlock Text="Player 2"
                           FontSize="16"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,6,0,0"/>
            </StackPanel>

            <!-- Jugador inferior -->
            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,100">
                <Ellipse Width="70" Height="70" Fill="DarkGray"/>
                <TextBlock Text="Player 4"
                           FontSize="16"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,6,0,0"/>
            </StackPanel>

            <!-- Logo UNO central -->
            <Image Source="/Assets/unoLogoPixelArt.png"
                   Width="230"
                   Height="190"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
                <Image.Effect>
                    <DropShadowEffect BlurRadius="20"
                                      ShadowDepth="4"
                                      Color="Black"
                                      Opacity="0.6"/>
                </Image.Effect>
            </Image>
        </Grid>

        <!-- 📟 Código + botón Ready (parte inferior central) -->
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,40">
            <Border Background="#33000000"
                    CornerRadius="8"
                    Padding="8,4"
                    BorderBrush="White"
                    BorderThickness="1"
                    Margin="0,0,0,10">
                <TextBlock Text="CODE: ABX92"
                           Foreground="Lime"
                           FontFamily="Consolas"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
            </Border>

            <TextBlock Text="3 / 4 Players ready"
                       FontSize="15"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,8"/>

            <Button x:Name="StartButton"
                    Content="READY"
                    Width="180"
                    Height="55"
                    FontSize="17"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Margin="0,5,0,0"/>
        </StackPanel>

        <!-- ⚙️ Botones de chat y ajustes (arriba a la derecha) -->
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Margin="0,20,20,0">
            <Button Width="42" Height="42"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="SettingsButton_Click">
                <Image Source="/Assets/settingsIcon.png" Width="26" Height="26"/>
            </Button>

            <Button Width="42" Height="42"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="ChatButton_Click"
                    Margin="0,12,0,0">
                <Image Source="/Assets/friendsIcon.png" Width="26" Height="26"/>
            </Button>
        </StackPanel>

        <!-- 💬 Chat emergente lateral -->
        <Border x:Name="ChatPopup"
                Background="#DD111111"
                CornerRadius="10"
                BorderBrush="White"
                BorderThickness="1"
                Padding="10"
                Width="280"
                Height="300"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,80,20,0"
                Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ScrollViewer>
                    <StackPanel>
                        <TextBlock Text="SweetBlue16: Ready!" Foreground="White"/>
                        <TextBlock Text="MapleVR: Let's go!" Foreground="White"/>
                    </StackPanel>
                </ScrollViewer>

                <DockPanel Grid.Row="1" Margin="0,10,0,0">
                    <TextBox Width="200" Height="30" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Button Content="Send"
                            Width="50" Height="30"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                </DockPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
