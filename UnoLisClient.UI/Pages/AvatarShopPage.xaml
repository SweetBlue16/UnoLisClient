<Page x:Class="UnoLisClient.UI.Pages.AvatarShopPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:language="clr-namespace:UnoLisClient.UI.Properties.Langs"
      mc:Ignorable="d"
      Title="AvatarShopPage">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Subtitulo -->
            <RowDefinition Height="*"/>
            <!-- Boxes -->
        </Grid.RowDefinitions>

        <!-- 🔝 HEADER -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Título -->
            <TextBlock Text="{x:Static language:Shop.AvatarShopLabel}"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"/>

            <!-- Revo Coins -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Icono moneda -->
                <TextBlock Text="$"
                           FontSize="22"
                           Foreground="White"
                           Margin="0,0,6,0"
                           VerticalAlignment="Center"/>
                <!-- Texto Revo Coins -->
                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="1,500"
                               FontSize="20"
                               Foreground="White"
                               FontWeight="Bold"
                               HorizontalAlignment="Right"/>
                    <TextBlock Text="{x:Static language:Shop.RevoCoinsLabel}"
                               FontSize="12"
                               Foreground="LightGray"
                               HorizontalAlignment="Right"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- 🔹 SUBTÍTULO -->
        <TextBlock Grid.Row="1"
                   Text="{x:Static language:Shop.LisBoxesLabel}"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Foreground="White"
                   Margin="0,20,0,10"/>

        <Separator Grid.Row="1" Margin="0,45,0,0" Background="White" Opacity="0.3"/>

        <!-- 🎁 Boxes -->
        <UniformGrid Grid.Row="2"
                     Columns="3"
                     Margin="0,40,0,0"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Top"
                     Rows="1">

            <!-- 🟩 Special Box -->
            <StackPanel Margin="20" HorizontalAlignment="Center">
                <Border Width="100" Height="100"
                        Background="LimeGreen"
                        CornerRadius="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <TextBlock Text="📦"
                               FontSize="40"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="{x:Static language:Shop.SpecialBoxLabel}"
                           Foreground="White"
                           FontSize="14"
                           Margin="0,10,0,5"
                           HorizontalAlignment="Center"/>
                <Button Content="{x:Static language:Shop.BuyButton}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Width="80"
                        HorizontalAlignment="Center"
                        Click="BuySpecial_Click"/>
            </StackPanel>

            <!-- 🟦 Epic Box -->
            <StackPanel Margin="20" HorizontalAlignment="Center">
                <Border Width="100" Height="100"
                        Background="DodgerBlue"
                        CornerRadius="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <TextBlock Text="📦"
                               FontSize="40"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="{x:Static language:Shop.EpicBoxLabel}"
                           Foreground="White"
                           FontSize="14"
                           Margin="0,10,0,5"
                           HorizontalAlignment="Center"/>
                <Button Content="{x:Static language:Shop.BuyButton}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Width="80"
                        HorizontalAlignment="Center"
                        Click="BuyEpic_Click"/>
            </StackPanel>

            <!-- 🟨 Legendary Box -->
            <StackPanel Margin="20" HorizontalAlignment="Center">
                <Border Width="100" Height="100"
                        Background="Gold"
                        CornerRadius="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <TextBlock Text="📦"
                               FontSize="40"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="{x:Static language:Shop.LegendaryBoxLabel}"
                           Foreground="White"
                           FontSize="14"
                           Margin="0,10,0,5"
                           HorizontalAlignment="Center"/>
                <Button Content="{x:Static language:Shop.BuyButton}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Width="80"
                        HorizontalAlignment="Center"
                        Click="BuyLegendary_Click"/>
            </StackPanel>
        </UniformGrid>
    </Grid>
</Page>
