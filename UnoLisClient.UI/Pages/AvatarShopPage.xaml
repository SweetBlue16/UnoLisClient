<Page x:Class="UnoLisClient.UI.Pages.AvatarShopPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:language="clr-namespace:UnoLisClient.UI.Properties.Langs"
      mc:Ignorable="d"
      Title="AvatarShopPage">

    <Grid>
        <!-- 🔲 Border semitransparente centrado -->
        <Border Background="#AA000000"
                CornerRadius="15"
                Padding="24"
                Margin="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MinWidth="600"
                MaxWidth="1000"
                MaxHeight="600">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="4" Color="Black" Opacity="0.5"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header -->
                    <RowDefinition Height="Auto"/>
                    <!-- Subtítulo -->
                    <RowDefinition Height="*"/>
                    <!-- Contenido -->
                </Grid.RowDefinitions>

                <!-- 🔝 HEADER: botón regresar + título + monedas -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- Botón regresar -->
                        <ColumnDefinition Width="*"/>
                        <!-- Título -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Revo Coins -->
                    </Grid.ColumnDefinitions>

                    <!-- Botón regresar -->
                    <Button x:Name="BackButton"
                            Grid.Column="0"
                            Content="⮌"
                            FontSize="20"
                            FontWeight="Bold"
                            Width="40"
                            Height="40"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Click="BackButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6"
                                                    Padding="2">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#22FFFFFF"/>
                                                    <Setter Property="Foreground" Value="#FFD60A"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#44FFFFFF"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Título -->
                    <TextBlock Grid.Column="1"
                               Text="{x:Static language:Shop.AvatarShopLabel}"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Left"
                               Margin="40,0,0,0"
                               VerticalAlignment="Center"/>

                    <!-- Revo Coins -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="$"
                                   FontSize="22"
                                   Foreground="White"
                                   Margin="0,0,6,0"/>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <TextBlock Text="1,500"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Right"/>
                            <TextBlock Text="{x:Static language:Shop.RevoCoinsLabel}"
                                       FontSize="12"
                                       Foreground="LightGray"
                                       HorizontalAlignment="Right"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- 🔹 Subtítulo -->
                <TextBlock Grid.Row="1"
                           Text="{x:Static language:Shop.LisBoxesLabel}"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Margin="50,10,0,10"
                           HorizontalAlignment="Left"/>
                <Separator Grid.Row="1"
                           Margin="0,45,0,0"
                           Background="White"
                           Opacity="0.3"/>

                <!-- 🎁 Contenido principal -->
                <ScrollViewer Grid.Row="2"
                              VerticalScrollBarVisibility="Auto">
                    <UniformGrid Columns="3"
                                 Margin="0,40,0,0"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Top"
                                 Rows="1">

                        <!-- 🟩 Caja especial -->
                        <StackPanel Margin="20" HorizontalAlignment="Center">
                            <Border Width="120" Height="120"
                                    Background="LimeGreen"
                                    CornerRadius="10"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <TextBlock Text="📦"
                                           FontSize="40"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="{x:Static language:Shop.SpecialBoxLabel}"
                                       Foreground="White"
                                       FontSize="16"
                                       Margin="0,10,0,5"
                                       HorizontalAlignment="Center"/>
                            <Button Content="{x:Static language:Shop.BuyButton}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Width="100"
                                    HorizontalAlignment="Center"
                                    Click="BuySpecial_Click"
                                    Cursor="Hand"/>
                        </StackPanel>

                        <!-- 🟦 Caja épica -->
                        <StackPanel Margin="20" HorizontalAlignment="Center">
                            <Border Width="120" Height="120"
                                    Background="DodgerBlue"
                                    CornerRadius="10"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <TextBlock Text="📦"
                                           FontSize="40"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="{x:Static language:Shop.EpicBoxLabel}"
                                       Foreground="White"
                                       FontSize="16"
                                       Margin="0,10,0,5"
                                       HorizontalAlignment="Center"/>
                            <Button Content="{x:Static language:Shop.BuyButton}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Width="100"
                                    HorizontalAlignment="Center"
                                    Click="BuyEpic_Click"
                                    Cursor="Hand"/>
                        </StackPanel>

                        <!-- 🟨 Caja legendaria -->
                        <StackPanel Margin="20" HorizontalAlignment="Center">
                            <Border Width="120" Height="120"
                                    Background="Gold"
                                    CornerRadius="10"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <TextBlock Text="📦"
                                           FontSize="40"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="{x:Static language:Shop.LegendaryBoxLabel}"
                                       Foreground="White"
                                       FontSize="16"
                                       Margin="0,10,0,5"
                                       HorizontalAlignment="Center"/>
                            <Button Content="{x:Static language:Shop.BuyButton}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Width="100"
                                    HorizontalAlignment="Center"
                                    Click="BuyLegendary_Click"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </UniformGrid>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>
